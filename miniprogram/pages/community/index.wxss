/* community/index.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用section样式 */
.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.section-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 聊天室模块样式 */
.chat-room-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 690rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.chat-room-content {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.chat-room-icon {
  width: 70rpx;
  height: 70rpx;
  background-color: transparent;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
}

.chat-room-icon image {
  width: 50rpx;
  height: 50rpx;
  object-fit: cover;
}

.chat-room-icon .iconfont {
  font-size: 40rpx;
  color: #07c160;
}

.chat-room-info {
  flex: 1;
}

.chat-room-name {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.chat-room-count {
  font-size: 24rpx;
  color: #999;
}

.chat-room-arrow .iconfont {
  font-size: 32rpx;
  color: #999;
}

/* 论坛模块样式 */
.forum-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  width: 690rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.forum-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #dcdcdc;
}

/* 发帖按钮样式 */
.post-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #07c160;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.post-btn .iconfont {
  font-size: 28rpx;
  margin-right: 8rpx;
}

/* 帖子列表样式 */
.post-list {
  margin-top: 20rpx;
}

.post-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #dcdcdc;
}

.post-item:last-child {
  border-bottom: none;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  margin-bottom: 16rpx;
}

.post-content .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.content-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.post-content .content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 收起状态 */
.post-content .content:not(.content-full) {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  max-height: 120rpx;
}

/* 展开状态 */
.post-content .content-full {
  max-height: none;
  overflow: visible;
}

.buttons-row {
  margin-top: 10rpx;
  text-align: right;
}

.view-more {
  display: inline-block;
  color: #07c160;
  font-size: 26rpx;
  padding: 10rpx;
}

.view-more:active {
  opacity: 0.8;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

/* 左侧区域 */
.post-footer-left {
  flex: 1;
  display: flex;
  align-items: center;
}

/* 右侧区域 */
.post-footer-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 删除按钮 */
.delete-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 操作按钮 */
.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx; /* 操作按钮之间的间距 */
  padding: 8rpx 0;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
}

.liked-text {
  color: #ff6b6b;
}

/* 点赞按钮样式 */
.like-action {
  position: relative;
  display: flex;
  align-items: center;
}

.action-item .iconfont {
  font-size: 32rpx;
  color: #999;
  margin-right: 8rpx;
}

.action-item .iconfont.liked {
  color: #ff4d4f;
}

.action-item text:last-child {
  font-size: 24rpx;
  color: #999;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 帖子图片样式 */
.post-images {
  margin-top: 20rpx;
  width: 100%;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.image-grid image {
  width: calc((100% - 20rpx) / 3); /* 三等分宽度减去间距 */
  height: 200rpx;
  border-radius: 8rpx;
  object-fit: cover;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}

/* 调整每行最后一个元素的右边距 */
.image-grid image:nth-child(3n) {
  margin-right: 0;
}

/* 单张图片样式 */
.image-grid image:only-child {
  width: 66%;
  height: 300rpx;
}

/* 两张图片样式 */
.image-grid image:first-child:nth-last-child(2),
.image-grid image:last-child:nth-child(2) {
  width: calc((100% - 10rpx) / 2);
  height: 240rpx;
}

/* 下拉刷新和加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 26rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.action-item text {
  font-size: 26rpx;
  color: #999;
}

.view-detail {
  font-size: 26rpx;
  color: #ff6b81;
  display: inline-block;
  padding: 4rpx 0;
}

/* 悬浮发帖按钮样式 */
.floating-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #07c160;
  color: #fff;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
  transition: all 0.3s;
}

.floating-btn:active {
  transform: scale(0.95);
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.2);
} 