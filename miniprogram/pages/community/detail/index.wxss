.container {
  padding: 30rpx 0;
  padding-bottom: 140rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading, .error-msg {
  width: 690rpx;
  text-align: center;
  margin-top: 200rpx;
  color: #999;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 帖子详情样式 */
.post-detail {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 690rpx;
  box-sizing: border-box;
  margin: 0 auto 30rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  background-color: #f0f0f0;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 4rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.post-content {
  margin-bottom: 16rpx;
}

.post-content .title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.post-content .content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  word-break: break-all;
}

/* 图片网格样式 */
.post-images {
  margin-top: 20rpx;
  width: 100%;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.image-grid image {
  width: calc((100% - 20rpx) / 3); /* 三等分宽度减去间距 */
  height: 200rpx;
  border-radius: 8rpx;
  object-fit: cover;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}

/* 调整每行最后一个元素的右边距 */
.image-grid image:nth-child(3n) {
  margin-right: 0;
}

/* 单张图片样式 */
.image-grid image:only-child {
  width: 66%;
  height: 300rpx;
}

/* 两张图片样式 */
.image-grid image:first-child:nth-last-child(2),
.image-grid image:last-child:nth-child(2) {
  width: calc((100% - 10rpx) / 2);
  height: 240rpx;
}

.post-footer {
  display: flex;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  padding: 6rpx 0;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #999;
}

.liked-text {
  color: #3399ff !important;
}

/* 评论区样式 */
.comment-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 690rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-list {
  padding-bottom: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.empty-comment {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 评论输入区域 */
.comment-input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
  z-index: 100;
  box-sizing: border-box;
  width: 100%;
}

.comment-input {
  flex: 3;
  min-height: 70rpx;
  max-height: 120rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 40rpx;
}

.submit-btn {
  flex: 1;
  max-width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #cccccc;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  margin-left: 20rpx;
  padding: 0;
}

.submit-btn.active {
  background-color: #3399ff;
}

button.submit-btn[disabled] {
  background-color: #cccccc;
  color: #fff;
} 