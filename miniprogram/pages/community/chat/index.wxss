.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
  overflow: hidden;
}

/* 消息列表样式 */
.message-list {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 120rpx;
  overflow-y: auto;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #07c160;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.message-item {
  display: flex;
  margin: 30rpx 20rpx;
  position: relative;
  align-items: flex-start;
}

.message-mine {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  flex-shrink: 0;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.message-content {
  display: flex;
  flex-direction: column;
  max-width: 60%;
}

.nickname {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  padding: 0 10rpx;
}

.message-mine .nickname {
  text-align: right;
}

/* 添加包装器来控制气泡对齐 */
.bubble-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
}

.message-mine .bubble-wrapper {
  align-items: flex-end;
}

.message-bubble {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  color: #333;
  word-break: break-word;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  position: relative;
  width: fit-content;
  max-width: 100%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.message-mine .message-bubble {
  background-color: #07c160;
  color: #fff;
}

.message-time {
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
  padding: 0 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.message-mine .message-time {
  text-align: right;
}

/* 输入区域样式 */
.input-section {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  align-items: flex-end;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 1000;
}

.message-input {
  flex: 1;
  height: 72rpx;
  min-height: 72rpx;
  max-height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
  line-height: 40rpx;
  width: auto;
  box-sizing: border-box;
}

.input-placeholder {
  color: #999;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background-color: #ddd;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  font-size: 28rpx;
  color: #fff;
}

.send-btn.active {
  background-color: #07c160;
}

.send-btn .iconfont {
  font-size: 40rpx;
  color: #fff;
}

.bottom-spacer {
  display: none;
} 