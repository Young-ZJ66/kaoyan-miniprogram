.container {
  padding: 20rpx;
  background-color: #fafafa;
  width: 100%;
  box-sizing: border-box;
}

.resource-section {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.resource-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.resource-title {
  font-size: 32rpx;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
}

.uploader-tag {
  padding: 4rpx 16rpx;
  background-color: #f5f5f5;
  color: #999;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.resource-info {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.resource-type-tag {
  padding: 4rpx 16rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.resource-size, .resource-downloads {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

.resource-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.resource-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.download-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 24rpx;
  margin-top: 32rpx;
}

.edit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #576b95;
  color: #fff;
  font-size: 32rpx;
  border-radius: 24rpx;
  margin-top: 24rpx;
}

.delete-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 24rpx;
  margin-top: 24rpx;
}

.download-btn:active {
  opacity: 0.8;
}

.resource-detail {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
}

.resource-meta {
  margin-bottom: 30rpx;
}

.meta-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.meta-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  width: 160rpx;
}

.value {
  color: #333;
  flex: 1;
}

.resource-description .label {
  display: block;
  margin-bottom: 16rpx;
}

.resource-description .value {
  color: #666;
  line-height: 1.6;
}

.resource-file {
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

.resource-file .label {
  display: block;
  margin-bottom: 16rpx;
}

.resource-file .value {
  color: #666;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
} 