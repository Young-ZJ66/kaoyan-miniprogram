.container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

.news-detail {
  width: 100%;
}

.news-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.news-meta {
  margin-bottom: 30rpx;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

.news-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.news-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
} 