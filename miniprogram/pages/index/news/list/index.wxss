.container {
  padding: 0 20rpx 20rpx 20rpx; /* 左右下保持内边距，上方由筛选器的高度和padding-top替代 */
  background: #fafafa;
  min-height: 100vh;
  padding-top: 95rpx; /* 根据筛选器实际高度调整 */
  box-sizing: border-box;
}

/* 分类筛选样式 */
.type-filter {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 15rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100; /* 确保筛选器在其他内容之上 */
  box-sizing: border-box; /* 确保padding不会增加宽度 */
  overflow: hidden; /* 确保不会出现滚动条 */
}

.type-scroll-view {
  white-space: nowrap;
  width: 100%;
  padding: 0 10rpx; /* 添加一些内边距 */
}

/* 针对小程序的滚动条隐藏 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}

.type-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.type-item:first-child {
  margin-left: 20rpx;
}

.type-item:last-child {
  margin-right: 20rpx;
}

.type-item.active {
  color: #fff;
  background: #07c160;
}

.news-list {
  width: 100%;
}

.news-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.news-title {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.news-type {
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #666;
  font-size: 28rpx;
} 