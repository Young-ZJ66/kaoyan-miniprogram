.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.news-list {
  width: 100%;
}

.news-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.news-title {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.news-type {
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #666;
  font-size: 28rpx;
} 