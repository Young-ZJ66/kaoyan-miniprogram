.container {
  padding: 20rpx;
} 

/* 搜索框样式 */
.search-box {
  padding: 20rpx 30rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box input {
  background: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

/* 筛选器样式 */
.filter-box, .level-filter {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  overflow-x: auto;
  white-space: nowrap;
}

.filter-item {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 26rpx;
}

.filter-item.active {
  color: #fff;
  background: #07c160;
}

/* 院校列表样式 */
.school-list {
  padding: 20rpx;
}

.school-item {
  display: flex;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.school-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
}

.school-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.school-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.school-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.region {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.level-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.level-tag {
  font-size: 24rpx;
  color: #1989fa;
  background-color: #ecf5ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid #1989fa;
}

/* 加载更多样式 */
.loading-more {
  text-align: center;
  padding: 30rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 