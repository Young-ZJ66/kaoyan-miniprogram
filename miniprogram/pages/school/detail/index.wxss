/* 院校基本信息 */
.school-header {
  display: flex;
  padding: 40rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.school-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
}

.school-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.school-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.school-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.region {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.level-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.level-tag {
  font-size: 24rpx;
  color: #1989fa;
  background-color: #ecf5ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid #1989fa;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.nav-item.active {
  color: #1989fa;
  font-weight: bold;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1989fa;
  border-radius: 2rpx;
}

/* 内容区域 */
.content-section {
  padding: 30rpx;
  background: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.intro-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.website-link {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #1989fa;
}

.arrow {
  color: #999;
}

/* 专业列表 */
.major-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.major-item {
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #eee;
  box-sizing: border-box;
}

.major-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.major-code {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.major-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.major-meta {
  display: flex;
  gap: 16rpx;
}

.duration, .degree-type {
  font-size: 24rpx;
  color: #666;
  background: #fff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 搜索栏 */
.search-box {
  padding: 24rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-box input {
  width: 100%;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  box-sizing: border-box;
}

.search-box input::placeholder {
  color: #999;
  text-align: center;
}

/* 筛选器 */
.filter-box {
  display: flex;
  gap: 20rpx;
  padding: 0 24rpx 24rpx;
  box-sizing: border-box;
}

.filter-item {
  flex: 1;
}

.picker {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.picker.active {
  color: #1989fa;
  background: #ecf5ff;
} 