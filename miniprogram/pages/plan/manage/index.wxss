.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  width: 100%;
}

.plan-item {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.plan-info {
  margin-bottom: 20rpx;
  width: 100%;
}

.plan-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.plan-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.plan-date {
  font-size: 28rpx;
  color: #666;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.plan-progress {
  margin-top: 20rpx;
  width: 100%;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

.progress-percentage {
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background-color: #07c160;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.empty-tip {
  width: 100%;
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
} 