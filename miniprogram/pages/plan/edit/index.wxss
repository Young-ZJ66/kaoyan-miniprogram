.container {
  padding: 20rpx;
  background-color: #fafafa;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-section {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 计划名称样式 */
.plan-name-input {
  width: 100%;
  height: 88rpx;
  background-color: #f8f8f8;
  padding: 0 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #eee;
}

.placeholder {
  color: #999;
}

/* 日期选择器样式 */
.date-section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 20rpx;
}

.date-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 10rpx;
}

.date-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.date-item .picker {
  background-color: #f8f8f8;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  text-align: center;
}

/* 任务列表样式 */
.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background-color: #f9f9f9;
  padding: 10rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
}

.task-input {
  flex: 1;
  background-color: #fff;
  padding: 24rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-height: 88rpx;
  line-height: 40rpx;
  box-sizing: border-box;
}

.deleteTask-btn {
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  color: #ff4d4f;
  background-color: #fff1f0;
  border-radius: 8rpx;
  height: 88rpx;
  line-height: 56rpx;
  box-sizing: border-box;
}

.add-task-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx;
  background-color: #f0f8f4;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #07c160;
  height: 88rpx;
  box-sizing: border-box;
  border: 1rpx dashed #07c160;
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 按钮样式 */
.button-group {
  display: flex;
  gap: 20rpx;
  justify-content: center;
  margin-top: 40rpx;
}

.submit-btn, .delete-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-radius: 24rpx;
  border: none;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.submit-btn {
  background-color: #07c160;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.delete-btn {
  background-color: #ff4d4f;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
}

.submit-btn:active, .delete-btn:active {
  opacity: 0.8;
} 