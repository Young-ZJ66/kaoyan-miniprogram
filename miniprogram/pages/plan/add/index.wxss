.container {
  padding: 20rpx;
  background-color: #fafafa;
  min-height: 100vh;
  box-sizing: border-box;
}

.form-section {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 计划名称样式 */
.plan-name-input {
  width: 100%;
  height: 88rpx;
  background-color: #f8f8f8;
  padding: 0 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #eee;
}

.placeholder {
  color: #999;
}

/* 日期选择器样式 */
.date-section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 20rpx;
}

.date-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 10rpx;
}

.date-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.date-item .picker {
  background-color: #f8f8f8;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  text-align: center;
}

/* 任务列表样式 */
.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid;
  transition: all 0.3s;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.task-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.85);
  z-index: 0;
}

.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
  z-index: 1;
}

.task-input {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-height: 40rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
}

.task-placeholder {
  color: #999;
  font-size: 28rpx;
}

.priority-selector {
  display: flex;
  align-items: center;
  padding: 0rpx 10rpx;
  background-color: rgba(255, 255, 255, 0);
  border-radius: 8rpx;
}

.priority-label {
  font-size: 26rpx;
  color: #333;
  margin-right: 10rpx;
  font-weight: 500;
}

.color-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 10rpx;
}

.color-option {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  position: relative;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.color-option:active {
  transform: scale(0.9);
}

.color-option.selected {
  transform: scale(1.1);
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.25);
}

.color-option.selected::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #fff;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.delete-btn {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #ff4d4f;
  background-color: #fff;
  border-radius: 8rpx;
  height: fit-content;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  margin-top: 0;
  align-self: flex-start;
}

.add-task-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx;
  background-color: #f0f8f4;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #07c160;
  height: 88rpx;
  box-sizing: border-box;
  border: 1rpx dashed #07c160;
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 按钮样式 */
.button-wrapper {
  margin-top: 40rpx;
}

.submit-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 24rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border: none;
  display: block;
  min-width: unset;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

button.submit-btn::after {
  display: none;
}

.submit-btn:active {
  opacity: 0.8;
} 