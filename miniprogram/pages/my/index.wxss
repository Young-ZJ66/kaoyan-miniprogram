.container {
  min-height: 100vh;
  background-color: #fafafa;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.user-info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
}

.user-text {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #8a8a8a;
}

.function-list {
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.function-left {
  display: flex;
  align-items: center;
}

.function-left text:last-child {
  font-size: 30rpx;
  color: #333;
  margin-left: 20rpx;
}

.iconfont {
  font-size: 40rpx;
  color: #333;
}

.icon-arrow {
  color: #999;
  font-size: 24rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #fff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 24rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
} 