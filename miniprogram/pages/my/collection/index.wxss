.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.collection-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.collection-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  width: 690rpx;
  box-sizing: border-box;
}

.school-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.school-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.school-detail {
  flex: 1;
}

.school-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.school-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.region-tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.major-info {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.separator {
  margin: 0 12rpx;
  color: #999;
}

.level-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.level-tag {
  font-size: 24rpx;
  color: #1989fa;
  background: #ecf5ff;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
} 