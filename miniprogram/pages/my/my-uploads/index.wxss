.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.resources-section {
  width: 100%;
}

/* 分类列表样式 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.category-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  white-space: nowrap;
}

.category-item.active {
  background-color: #07c160;
  color: #fff;
}

/* 资源列表样式 */
.resources-list {
  width: 100%;
}

.resource-item {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.resource-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.resource-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.uploader-tag {
  font-size: 24rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.resource-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.resource-type-tag {
  padding: 4rpx 16rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.resource-size {
  font-size: 24rpx;
  color: #666;
}

.resource-downloads {
  font-size: 24rpx;
  color: #666;
}

.resource-date {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.upload-list {
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.upload-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.upload-item:last-child {
  border-bottom: none;
}

.item-content {
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item-category {
  background-color: #f0f0f0;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
}

.action-btn.edit {
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
}

.action-btn.delete {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 