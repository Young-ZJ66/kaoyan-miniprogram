.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.downloads-section {
  width: 100%;
}

/* 分类列表样式 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx 0;
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.category-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #07c160;
  color: #fff;
}

/* 下载列表样式 */
.downloads-list {
  width: 100%;
}

.download-item {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.resource-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.resource-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.uploader-tag {
  font-size: 24rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.resource-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.resource-type-tag {
  padding: 4rpx 16rpx;
  background-color: #e6f7ff;
  color: #1890ff;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.resource-size {
  font-size: 24rpx;
  color: #666;
}

.resource-date {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

.empty-tip {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.download-list {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.download-item:last-child {
  border-bottom: none;
}

.download-item:active {
  background-color: #f8f8f8;
}

.download-info {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
}

.download-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.download-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  width: 100%;
  box-sizing: border-box;
}

.download-category {
  margin-right: 20rpx;
}

.download-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  margin-left: 20rpx;
  flex-shrink: 0;
}

.item-content {
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.item-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.item-category {
  background-color: #f0f0f0;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 